<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="2000">
        <OnSwipe
            motion:touchAnchorId="@+id/square"
            motion:touchAnchorSide="bottom"
            motion:dragDirection="dragDown" />
        <OnClick
            motion:targetId="@+id/title_position"
            motion:clickAction="transitionToEnd"/>

        <KeyFrameSet>

            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@+id/square"
                android:scaleY="2"
                android:scaleX="2"/>

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@+id/square"
                android:rotation="-180"/>

            <KeyAttribute
                motion:framePosition="25"
                motion:motionTarget="@+id/title_position"
                android:scaleX="2"
                android:scaleY="2"/>

            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/plane_mode_image"
                motion:percentY="0.25"
                motion:framePosition="20"/>

            <KeyAttribute
                motion:motionTarget="@+id/plane_mode_image"
                motion:framePosition="20"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:rotation="20" />

            <KeyAttribute
                motion:motionTarget="@+id/plane_mode_image"
                motion:framePosition="100"
                android:scaleX="2"
                android:scaleY="2"
                android:rotation="90"/>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/square"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/transparent"/>
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@android:color/black"/>
            <CustomAttribute
                motion:attributeName="text"
                motion:customStringValue="Square"/>
        </Constraint>

        <Constraint
            android:id="@+id/title_position"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                motion:attributeName="text"
                motion:customStringValue="Right"/>
        </Constraint>

        <Constraint
            android:id="@+id/plane_mode_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/square"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#B30000"/>
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@android:color/transparent"/>
        </Constraint>

        <Constraint
            android:id="@+id/title_position"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                motion:attributeName="text"
                motion:customStringValue="Left"/>
        </Constraint>

        <Constraint
            android:id="@id/plane_mode_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/title_position">
        </Constraint>

    </ConstraintSet>

</MotionScene>