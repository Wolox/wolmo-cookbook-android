<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/vLoginFacebookOriginalLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/vLoginFacebookLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/facebook_login_btn"/>

    <TextView
        android:id="@+id/vLoginFacebookUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_more"
        android:gravity="top|center_horizontal"
        android:textSize="@dimen/font_medium_extra" />

    <TextView
        android:id="@+id/vLoginFacebookUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_more"
        android:gravity="top|center_horizontal"
        android:textSize="@dimen/font_medium_extra" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vLoginFacebookUserPhoto"
        android:layout_width="@dimen/google_login_user_photo_width"
        android:layout_height="@dimen/google_login_user_photo_height"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        fresco:viewAspectRatio="1" />

    <Button
        android:id="@+id/vLoginFacebookLogoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium_more"
        android:enabled="false"
        android:gravity="top|center_horizontal"
        android:text="@string/google_login_logout"
        android:textSize="@dimen/font_medium_extra" />

</LinearLayout>